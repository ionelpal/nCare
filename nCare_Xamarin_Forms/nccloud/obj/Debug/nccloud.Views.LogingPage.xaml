<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="nccloud.Views.LogingPage" Title="nCare!" NavigationPage.HasBackButton="False">
	<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
	<StackLayout VerticalOptions="Center" Padding="40">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="2*" />
				<RowDefinition Height="3*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="200" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Label Text="Welcome to nCare!" TextColor="#0097A7" FontSize="Large" FontAttributes="Italic" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" Grid.Column="0" />
			<Label Text="Please obtain your Login details from your related Nursing Home!" FontAttributes="Italic" FontSize="Medium" TextColor="Gray" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1" Grid.Column="0" Margin="10,0,20,0" />
			<Button x:Name="LoginButton" Text="Login" TextColor="White" BackgroundColor="#0097A7" FontSize="Medium" Grid.Row="2" Grid.Column="0" />
			<Label x:Name="messageLabel" FontSize="Medium" Grid.Row="3" Grid.Column="0" />
		</Grid>
	</StackLayout>
</ContentPage>