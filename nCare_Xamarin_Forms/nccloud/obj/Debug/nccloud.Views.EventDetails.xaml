<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="nccloud.EventDetails"
             Title="Events"
             NavigationPage.HasBackButton="False" >
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />

  <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="10">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>

        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Label Text="Event Details" FontAttributes="Italic"  FontSize="Medium" TextColor="Olive"  HorizontalOptions="StartAndExpand"  VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
      <Button x:Name="dismissButton" Text="Return"  FontSize="Small" TextColor="Red" Clicked="OnDismissButtonClicked" HorizontalOptions="End" VerticalOptions="Center" Grid.Row="0" Grid.Column="1"/>
    </Grid>
    
    <Label x:Name="eventdetails" Text="{Binding EventDetails}" FontSize="Medium"  />
 
   
  </StackLayout>

</ContentPage>
